@model IEnumerable<LAMovies_NET6.Models.Actor>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section style="padding-top: 30px" class="content">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Danh sách thể loại</h2>
            <div class="card-tools">
                <a asp-controller="Actor" asp-action="AddActor" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên diễn viên</th>
                        <th>Ảnh đại diện</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.idActor</td>
                                <td>@item.nameActor</td>
                                <td>
                                    <img style="width:100px; height: 100px" src="@item.avartaActor" />
                                </td>
                                <td>
                                    <a asp-controller="Genre" asp-action="ShowList" asp-route-id="@item.idActor" class="btn btn-sm btn-success"><i class="fa-solid fa-list"></i></a>
                                    <a asp-controller="Actor" asp-action="EditActor" asp-route-id="@item.idActor" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="/Actor/DeleteActor?id=@item.idActor" onclick="return window.confirm('Xác nhận xoá?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>

