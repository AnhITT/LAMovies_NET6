@model IEnumerable<LAMovies_NET6.Models.Movie>

@{
    ViewData["Title"] = "ListMovieByGenres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="home" class="iq-main-slider pt-4">
<div class="main-content">
    <section class="list-movies">
        <div class="container">
                <h2 class="h2 section-title text-center">All Movies @ViewBag.nameGenre</h2>
            <ul class="movies-list">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="movie-card" onclick="window.location.href='/Movies/MovieDetail?movieId=@item.idMovie'">
                            <a href="#">
                                <figure class="card-banner">
                                    <img src="@item.uriImg" alt="Morbius movie poster">
                                </figure>
                            </a>

                            <div class="title-wrapper text-center">
                                <a href="#">
                                    <h3 class="card-title">@item.nameMovie</h3>
                                </a>

                            </div>

                            <div class="card-meta d-flex justify-content-center">
                                <div class="badge-movie badge-outline">@item.qualityMovie</div>

                                <div class="badge-old badge-outline-old">@item.minAgeMovie +</div>

                                <div class="badge-time badge-outline-time">@item.timeMovie</div>
                            </div>

                        </div>
                    </li>
                }
            </ul>
        </div>
        </section>
        </div>
        </section>