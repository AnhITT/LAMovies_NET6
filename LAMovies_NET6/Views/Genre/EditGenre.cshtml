@model LAMovies_NET6.Models.Genre
@{
    ViewData["Title"] = "Chỉnh sửa thể loại";

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item h5"><a asp-controller="Genre" asp-action="QLGenres"><i class="uil-tag-alt"></i> Quản lý thể loại</a></li>
            <li class="breadcrumb-item h5">Sửa thể loại</li>
        </ol>
    </nav>
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center ">Sửa thương hiệu</h2>
                            <form asp-action="EditGenre"  method="post">
                                <div>
                                    <div>
                                        Mã thể loại
                                        <div>
                                            <input type="text" class="form-control" asp-for="idGenre" readonly>
                                        </div>
                                    </div>
                                    Tên thể loại
                                    <div>
                                        <input type="text" class="form-control" asp-for="nameGenre">
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-dark" asp-controller="Genre" asp-action="QLGenres"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                                    <input type="submit" value="Sửa thể loại" class="btn btn-success m-3" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

