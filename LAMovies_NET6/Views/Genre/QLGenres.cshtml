@model IEnumerable<LAMovies_NET6.Models.Genre>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section style="padding-top: 30px" class="content">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Danh sách thể loại</h2>
            <div class="card-tools">
                <a asp-controller="Genre" asp-action="AddGenre" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên thể loại</th>
                        <th>Thứ tự</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {

                            <tr id="trow_@item.idGenre">
                                <td>@i</td>
                                <td>@item.nameGenre</td>
                                <td>
                                    <a asp-controller="Genre" asp-action="ShowList" asp-route-id="@item.idGenre" class="btn btn-sm btn-success"><i class="fa-solid fa-list"></i></a>
                                    <a asp-controller="Genre" asp-action="EditGenre" asp-route-id="@item.idGenre" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="/Genre/DeleteGenre?id=@item.idGenre" onclick="return window.confirm('Xác nhận xoá?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có thể loại nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>

<style>
    .page-item a {
        color: white;
        text-decoration: none;
        font-weight: bold;
    }
</style>