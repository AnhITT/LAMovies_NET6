@model IEnumerable<LAMovies_NET6.Models.User>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section style="padding-top: 30px" class="content">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Danh sách tài khoản</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Ngày sinh</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {

                            <tr id="trow_@item.Id">
                                <td>@item.UserName</td>
                                <td>@item.fullName</td>
                                <td>@item.Email</td>
                                <td>@item.dateBirthdayUser</td>
                                <td>
                                    <a asp-controller="Movies" asp-action="EditMovie" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="/Movies/DeleteMovie?id=@item.Id" onclick="return window.confirm('Xác nhận xoá?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>

                                </td>
                            </tr>

                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Không có phim nào!!!</td>
                        </tr>
                    }
        </div>
        </tbody>
        </table>
    </div>
</section>