@model LAMovies_NET6.Models.DTO.LoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-5 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            <h3 class="font-weight-bold mb-3 mt-3 text-center">SIGN IN</h3>
                            @if (TempData["msg"] != null)
                            {
                                <div class="text-danger">@TempData["msg"]</div>
                            }
                            <form asp-action="Login" method="post" class="mt-4">
                                <div class="form-group">
                                    <span class ="text-danger" asp-validation-for="userName"></span>
                                    <input asp-for="userName" type="text" class="form-control mb-0" id="exampleInputEmail1"
                                           placeholder="Username" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <span class="text-danger" asp-validation-for="password"></span>
                                    <input asp-for="password" type="password" class="form-control mb-0" id="exampleInputPassword2"
                                           placeholder="Password">
                                </div>
                                <div class="custom-control custom-checkbox d-inline-block">
                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                    <label class="custom-control-label" for="customCheck">Remember Me</label>
                                </div>

                                <div class="sign-info text-center">
                                    <button type="submit" class="btn btn-danger mt-2">Sign in</button>
                                </div>

                            </form>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-center links">
                            Don't have an account? <a href="SignUp" class="text-primary ml-2">Sign Up</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="#" class="f-link">Forgot your password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>