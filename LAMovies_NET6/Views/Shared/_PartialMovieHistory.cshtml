@using LAMovies_NET6.Models
@{
    var Movie = ViewBag.movieHistory;
}

@if (Movie != null)
{
    <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12 overflow-hidden">
                            <div class="iq-main-header d-flex align-items-center justify-content-between">
                                <h4 class="main-title">History Movies</h4>
                            </div>
                            <div class="suggestede-contens">
                                <ul class="list-inline favorites-slider row p-0 mb-0">
                                @foreach (var item in Movie)
                                {
                                    <li class="slide-item">
                                        <div class="block-images position-relative">
                                            <div class="img-box">
                                                <img src="@item.uriImgCover" class="img-fluid" alt="">
                                            </div>
                                            <div class="block-description">
                                                <h6 class="iq-title"><a href="movie-details.html">@item.nameMovie</a></h6>
                                                <div class="movie-time d-flex align-items-center my-2">
                                                    <div class="badge-hd badge-danger p-1 mr-2">@item.qualityMovie</div>
                                                    <div class="badge badge-secondary p-1 mr-2">@item.minAgeMovie +</div>
                                                    <span class="text-white">@item.timeMovie</span>
                                                </div>
                                                <div class="hover-buttons text-center">
                                                    <span class="btn btn-danger iq-button" onclick="window.location.href='/Movies/MovieDetail?movieId=@item.idMovie'">
                                                        <i class="fa-solid fa-circle-info"></i>
                                                        More Details
                                                    </span>
                                                    <a href="@item.uriMovieTrailer" class="video-open btn btn-danger iq-button ml-2">
                                                        <i class="fa-solid fa-tv"></i>
                                                        Trailer
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else{
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 overflow-hidden">
                    <div class="iq-main-header d-flex align-items-center justify-content-between">
                        <h4 class="main-title">Suggest For You</h4>
                    </div>
                    <div class="upcoming-contens">
                        <ul class="favorites-slider list-inline row p-0 mb-0">
                            @Html.Partial("_PartialSortDate")
                        </ul>
                    </div>
                </div>
            </div>
        </div>
}