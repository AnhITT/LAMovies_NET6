@model IEnumerable<LAMovies_NET6.Models.Pricing>
@{
    ViewData["Title"] = "Quản lý dịch vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section style="padding-top: 30px" class="content">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Danh sách dịch vụ</h2>
            <div class="card-tools">
                <a asp-controller="Pricing" asp-action="AddPricing" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên dịch vụ</th>
                        <th>Giá</th>
                        <th>Thời gian</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.idPricing</td>
                                <td>@item.namePricing</td>
                                <td>@item.pricePricing $</td>
                                <td>@item.timePricing month</td>
                                <td>
                                    <a asp-controller="Pricing" asp-action="EditPrice" asp-route-id="@item.idPricing" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="/Pricing/DeletePricing?id=@item.idPricing" onclick="return window.confirm('Xác nhận xoá?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có thể loại nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>

<style>
    .page-item a {
        color: white;
        text-decoration: none;
        font-weight: bold;
    }
</style>